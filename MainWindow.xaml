<Window x:Class="_01_03PeterComputer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_03PeterComputer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label x:Name="lbltitle"
               Content="AMD FX 8370 Processor"
               HorizontalAlignment="Center"/>
        <Image x:Name="img"
               Source="https://images-na.ssl-images-amazon.com/images/I/81aAqEzKuDL._SL1500_.jpg"
               Height="200"/>
        <Button x:Name="btnforward"
                Content="Forward"
                Click="btnforward_Click"
                VerticalAlignment="Bottom"/>
        <Button x:Name="btnbackwards"
                Content="Backwards"
                Click="btnbackwards_Click"
                VerticalAlignment="Bottom"/>
    </StackPanel>
</Window>
